<UserControl x:Class="Devyatochka.Pages.SubComponents.ProductCostCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Devyatochka.Pages.SubComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Margin="5" Padding="5" MinWidth="180">
        <StackPanel>
            <Image x:Name="imageProductPhoto" Width="100" Height="150" />
            <TextBlock Text="{Binding Path=Product.Title}" FontWeight="Bold" FontSize="16" TextAlignment="Center" TextWrapping="Wrap" MinHeight="40"/>
            <TextBlock Text="{Binding Path=Product.Brand.Title}" FontStyle="Italic" FontSize="14" TextAlignment="Center" />
            <TextBlock Text="{Binding Path=FinalCost, StringFormat={}{0:N2} рублей}" FontStyle="Italic" FontSize="14" TextAlignment="Center" />
            <TextBlock Text="{Binding Path=Discount, StringFormat=Скидка: {0}%}" FontStyle="Italic" FontSize="14" TextAlignment="Center" />
            <TextBlock Text="{Binding Path=DiscountType.Title, StringFormat=Тип скидки: {0}}" FontStyle="Italic" FontSize="14" TextAlignment="Center" />
            <Button x:Name="buttonEdit" Content="Изменить" Margin="5,10,5,5" Click="buttonEdit_Click" />
            <Button x:Name="buttonDelete" Content="Удалить" Margin="5,0,5,5" Click="buttonDelete_Click"  />
        </StackPanel>
    </Border>
</UserControl>
