<Page x:Class="Devyatochka.Pages.AdminGeneralMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Devyatochka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminGeneralMenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="buttonUserList" Content="Пользователи" Grid.Row="1" Grid.Column="1" Margin="5" Click="buttonUserList_Click"/>
        <Button x:Name="buttonRoleList" Content="Роли" Grid.Row="1" Grid.Column="2" Margin="5" Click="buttonRoleList_Click"/>
        <Button x:Name="buttonCountryList" Content="Страны" Grid.Row="2" Grid.Column="1" Margin="5"/>
        <Button x:Name="buttonProductCategoryList" Content="Категории" Grid.Row="2" Grid.Column="2" Margin="5"/>
        <Button x:Name="buttonBrandList" Content="Бренды" Grid.Row="3" Grid.Column="1" Margin="5"/>
        <Button x:Name="buttonWeightTypeList" Content="Меры веса" Grid.Row="3" Grid.Column="2" Margin="5"/>
        <Button x:Name="buttonProductList" Content="Продукты" Grid.Row="4" Grid.Column="1" Margin="5"/>
        <Button x:Name="buttonDiscountTypeList" Content="Типы Скидки" Grid.Row="4" Grid.Column="2" Margin="5"/>

        <Button x:Name="buttonProductCostList" Content="Цены" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="5"/>
    </Grid>
</Page>
